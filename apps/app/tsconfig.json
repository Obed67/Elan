{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@elan/tsconfig/next.json",
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mjs",
    ".next/types/**/*.ts",
    "tailwind.config.js",
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}